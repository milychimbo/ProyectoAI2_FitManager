<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>
        <%= title%>
    </title>
    <%- include ('layouts/headStyles.ejs') %>
</head>

<body>
    <%- include ('layouts/preloader.ejs') %>
        <div id="main-wrapper">
            <%- include('layouts/logo.ejs') %>
                <%- include('layouts/header.ejs') %>
                    <%- include('layouts/menu-lateral.ejs') %>
                        <!-- Body -->
                        <div class="content-body">
                            <div class="container-fluid">
                                <!-- datatable -->
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="card-title">Progreso de clientes</h4>
                                            <!-- Button trigger modal -->
                                            <div class="d-flex justify-content-end px-5">
                                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                                    data-target="#modalProductos">Agregar progreso</button>
                                            </div>
                                            <div class="table-responsive" id="contenedor-clientes">
                                                <table class="table table-striped table-bordered zero-configuration">
                                                    <thead>
                                                        <tr>
                                                            <th>ID</th>
                                                            <th>Cédula</th>
                                                            <th>Peso</th>
                                                            <th>Altura</th>
                                                            <th>IMC</th>
                                                            <th>Acciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="tbody-client"></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- EndBody />-->
                        <%- include('layouts/footer.ejs') %>
        </div>
        <!-- Modal -->
        <div class="bootstrap-modal">
            <!-- Modal -->
            <div class="modal fade" id="modalProductos" style="display: none;" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Registrar Progreso</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span>x</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="basic-form px-1">
                                <form id="formClienteModal" data-action-request="false">
                                    <div class="form-group">
                                        <label>ID</label>
                                        <input type="text" class="form-control" id="inputID" placeholder="Autogenerado" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label>Cédula</label>
                                        <input type="text" class="form-control" id="inputCedula" placeholder="999999999" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Peso</label>
                                        <input type="text" class="form-control" id="inputPeso" placeholder="Peso en kilos"required>
                                    </div>
                                    <div class="form-group">
                                        <label>Altura</label>
                                        <input type="text" class="form-control" id="inputAltura" placeholder="Altura en metros" required>
                                    </div>
                                    <div class="form-group">
                                        <label>IMC</label>
                                        <input type="text" class="form-control" id="inputIMC" readonly>
                                    </div>
                                    <div class="modal-footer">
                                        <input type="reset" class="btn btn-warning" value="Limpiar campos">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="closeModal">Cancelar</button>
                                        <button type="submit" class="btn btn-primary" >Guardar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('layouts/scripts.ejs') %>
        <script src="assets/plugins/tables/js/jquery.dataTables.min.js"></script>
        <script src="assets/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
        <script src="assets/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>
        <script src="js/progreso.js"></script>
</body>

</html>