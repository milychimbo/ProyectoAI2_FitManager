<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
        integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

    <title>
        <%= title%>
    </title>
    <%- include ('layouts/headStyles.ejs') %>
</head>

<body>
    <%- include ('layouts/preloader.ejs') %>
        <div id="main-wrapper">
            <%- include('layouts/logo.ejs') %>
                <%- include('layouts/header.ejs') %>
                    <%- include('layouts/menu-lateral.ejs') %>
                        <!-- Body -->
                        <div class="content-body">
                            <div class="container-fluid">
                                <!-- datatable -->
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="card-title">Pago Membresia</h4>
                                            <!-- Button trigger modal -->
                                            <div class="d-flex justify-content-end px-5">
                                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                                    data-target="#modalProductos">Agregar pago</button>
                                            </div>
                                            <div class="table-responsive" id="contenedor-pago">
                                                <table class="table table-striped table-bordered zero-configuration">
                                                    <thead>
                                                        <tr>
                                                            <th>ID Pago</th>
                                                            <th>Cédula Cliente</th>
                                                            <th>Valor Cancelado</th>
                                                            <th>ID Membresia</th>
                                                            <th>Fecha Pago</th>
                                                            <th>Acciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="tbody-pago"></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- EndBody />-->
                        <%- include('layouts/footer.ejs') %>
        </div>
        <!-- Modal -->
        <div class="bootstrap-modal">
            <!-- Modal -->
            <div class="modal fade" id="modalProductos" style="display: none;" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Registrar Pago</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span>x</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="basic-form px-1">
                                <form id="formPagoModal" data-action-request="false">
                                    <div class="form-group">
                                        <input type="hidden" class="form-control" id="inputPago">
                                    </div>
                                    <div class="form-group">
                                        <label>Cédula Cliente</label>
                                        <input type="text" class="form-control" id="inputCedula" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Valor Cancelado</label>
                                        <input type="text" class="form-control" id="inputValor" placeholder="0.00"
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <label>ID Membresía</label>
                                        <select class="form-control" id="inputMembresia">
                                            <option selected disabled>Seleccionar Membresia</option>
                                        </select>
                                    </div>
                                    <label>Fecha de Pago</label>
                                    <input type="date" class="form-control" id="inputFecha" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="reset" class="btn btn-warning" value="Limpiar campos">
                            <button type="button" class="btn btn-danger" data-dismiss="modal"
                                id="closeModal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
        <%- include('layouts/scripts.ejs') %>
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
            <script src="assets/plugins/tables/js/jquery.dataTables.min.js"></script>
            <script src="assets/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>
            <script src="js/pago.js"></script>
</body>

</html>