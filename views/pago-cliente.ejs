<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>
        <%= title%>
    </title>
    <%- include ('layouts/headStyles.ejs') %>
</head>

<body>
    <%- include ('layouts/preloader.ejs') %>
        <div id="main-wrapper">
            <%- include('layouts/logo.ejs') %>
                <%- include('layouts/header.ejs') %>
                    <%- include('layouts/menu-lateral.ejs') %>
                        <!-- Body -->
                        <div class="content-body">
                            <div class="container-fluid">
                                <!-- datatable -->
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="card-title">Pagos</h4>
                                            <!-- Button trigger modal -->
                                            <!--
                                            <div class="d-flex justify-content-end px-5">
                                               <button type="button" class="btn btn-primary" data-toggle="modal"
                                                    data-target="#modalProductos">Agregar progreso</button>
                                            </div>
                                            -->
                                            <div class="table-responsive" id="contenedor-clientes">
                                                <table class="table table-striped table-bordered zero-configuration">
                                                    <thead>
                                                        <tr>
                                                            <th>ID</th>
                                                            <th>ID Membres√≠a</th> 
                                                            <th>Valor Cancelado</th>
                                                            <th>Fecha Pago</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="tbody-client">
                                                        <% pagosCliente.forEach(pago => { %>
                                                            <tr>
                                                                <td>
                                                                    <%= pago.id_pago %>
                                                                </td>
                                                                <td>
                                                                    <%= pago.valor_cancelado %>
                                                                </td>
                                                                <td>
                                                                    <%= pago.id_membresia %>
                                                                </td>
                                                                <td>
                                                                    <%= pago.fecha_pago %>
                                                                </td>
                                                            </tr>
                                                            <% }); %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- EndBody />-->
                        <%- include('layouts/footer.ejs') %>
        </div>
                
        <%- include('layouts/scripts.ejs') %>
        <script src="assets/plugins/tables/js/jquery.dataTables.min.js"></script>
        <script src="assets/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
        <script src="assets/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>
        <script src="js/pago.js"></script>
</body>

</html>