<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="css/login.css">

    <!-- ===== BOX ICONS ===== -->
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Login</title>
</head>

<body>
    <div class="login">
        <div class="login__content">
            <div class="login__img">
                <img src="images/img-login.svg" alt="">
            </div>

            <div class="login__forms">
                <form action="/login/user" method="POST" class="login__registre" id="login-in">
                    <h1 class="login__title">Usuarios</h1>

                    <div class="login__box">
                        <i class='bx bx-at login__icon'></i>
                        <input type="text" id="correoUser" name="correo" placeholder="Tu Correo" class="login__input"
                            required>
                    </div>

                    <div class="login__box">
                        <i class='bx bx-lock-alt login__icon'></i>
                        <input type="password" name="password" placeholder="Password" class="login__input">
                    </div>

                    <input type="submit" class="login__button" value="Iniciar Sesi贸n">

                    <div>
                        <span class="login__account">Eres administrador ?</span>
                        <span class="login__signin" id="sign-up">Inicia sesi贸n</span>
                    </div>
                </form>

                <form action="/login/admin" class="login__create none" id="login-up" method="POST">
                    <h1 class="login__title">Administrador</h1>

                    <div class="login__box">
                        <i class='bx bx-at login__icon'></i>
                        <input type="text" id="correoAdmin" name="correo" placeholder="Tu Correo" class="login__input"
                            required value="admin@gmail.com">
                    </div>

                    <div class="login__box">
                        <i class='bx bx-lock-alt login__icon'></i>
                        <input type="password" id="passwordAdmin" name="password" placeholder="Password"
                            class="login__input" value="12345">
                    </div>

                    <input type="submit" class="login__button" value="Iniciar Sesi贸n">

                    <div>
                        <span class="login__account"> Eres usuario ?</span>
                        <span class="login__signup" id="sign-in">Inicia Sesi贸n</span>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% if(alert){ %>
        <script>
            Swal.fire({
                icon: '<%= icon %>',
                title: '<%= title %>',
                text: '<%= text %>',
                timer: '<%= timer %>',
            })    
        </script>
        <%}%>
            <!--===== MAIN JS =====-->
            <script src="js/login.js"></script>
</body>

</html>