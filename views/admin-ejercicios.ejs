<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Admin - Ejercicios</title>
    <%- include ('layouts/headStyles.ejs') %>
</head>

<body>
    <%- include ('layouts/preloader.ejs') %>
        <div id="main-wrapper">
            <%- include('layouts/logo.ejs') %>
                <%- include('layouts/header.ejs') %>
                    <%- include('layouts/menu-lateral.ejs') %>
                        <!-- Body -->
                        <div class="content-body">
                            <div class="container-fluid">
                                <!-- datatable -->
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="card-title">Ejercicios</h4>
                                            <!-- Button trigger modal -->
                                            <div class="d-flex justify-content-end px-5">
                                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                                    data-target="#modalEjercicio">Añadir Ejercicio</button>
                                            </div>
                                            <div class="table-responsive">
                                                <table class="table table-striped table-bordered zero-configuration">
                                                    <thead>
                                                        <tr>
                                                            <th>Id</th>
                                                            <th>Nombre</th>
                                                            <th>Descripción</th>
                                                            <th>Imagen</th>
                                                            <th>Acciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="tbody-exercise"></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- EndBody />-->
                        <%- include('layouts/footer.ejs') %>
        </div>
        <!-- Modal -->
        <div class="bootstrap-modal">
            <!-- Modal -->
            <div class="modal fade" id="modalEjercicio" style="display: none;" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Añadir Ejercicio</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span>x</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="basic-form px-1">
                                <form id="formEjercicioModal" data-action-request="false">
                                    <div class="form-group">
                                        <label>ID</label>
                                        <input type="number" class="form-control" id="inputID" placeholder="Autogenerado" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label>Nombre del ejercicio</label>
                                        <input type="text" class="form-control" id="inputNombre" placeholder="Push up" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Imagen</label>
                                        <input type="url" class="form-control" id="inputUrl" placeholder="ulr" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Descripción</label>
                                        <textarea class="form-control h-150px" id="inputDesc" rows="3" placeholder="Descripción" required></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <input type="reset" class="btn btn-warning" value="Limpiar campos">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="closeModal">Cancelar</button>
                                        <button type="submit" class="btn btn-primary" >Guardar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('layouts/scripts.ejs') %>
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
            <script src="assets/plugins/tables/js/jquery.dataTables.min.js"></script>
            <script src="assets/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
            <script src="assets/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>
            <script src="js/ejercicio.js"></script>
</body>

</html>