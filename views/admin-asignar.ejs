<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>
        <%= title%>
    </title>
    <%- include ('layouts/headStyles.ejs') %>
</head>

<body>
    <%- include ('layouts/preloader.ejs') %>
        <div id="main-wrapper">
            <%- include('layouts/logo.ejs') %>
                <%- include('layouts/header.ejs') %>
                    <%- include('layouts/menu-lateral.ejs') %>
                        <!-- Body -->
                        <div class="content-body">
                            <div class="container-fluid">
                                <!-- datatable -->
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="card-title">Rutinas Asignadas</h4>
                                            <!-- Button trigger modal -->
                                            <div class="d-flex justify-content-end px-5">
                                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                                    data-target="#modalProductos">Asignar Rutina</button>
                                            </div>
                                            <div class="table-responsive" id="contenedor-asignar">
                                                <table class="table table-striped table-bordered zero-configuration">
                                                    <thead>
                                                        <tr>
                                                            <th>Persona</th>
                                                            <th>ID Rutina</th>
                                                            <th>Día Asignado</th>
                                                            <th>Acciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="tbody-asignar"></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- EndBody />-->
                        <%- include('layouts/footer.ejs') %>
        </div>
        <!-- Modal -->
        <div class="bootstrap-modal">
            <!-- Modal -->
            <div class="modal fade" id="modalProductos" style="display: none;" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Asignar Rutina</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span>x</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="basic-form px-1">
                                <form id="formAsignarModal" data-action-request="false">
                                    <div class="form-group">
                                        <label>Cédula</label>
                                        <input type="text" list="browsers" class="form-control" id="inputCedula">
                                        <datalist id="browsers">
                                            <% cliente.forEach(clientes => { %>
                                                <option value="<%= clientes.cedula %>">
                                            <% }); %> 
                                          </datalist>
                                    </div>
                                    <div class="form-group">
                                        <label>Rutina</label>
                                        <select class="custom-select mr-sm-2" id="inputRuti">
                                            <option selected="selected" disabled>Seleccionar</option>
                                            <% rutina.forEach(rutina => { %>
                                                <option value="<%= rutina.id_rutina %>"><%= rutina.nombre %></option>
                                            <% }); %>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Día Asignado</label>
                                        <select name="select" class="form-control" id="inputDia">
                                            <option selected="selected" disabled>Seleccionar</option>
                                            <option value="Lunes">Lunes</option>
                                            <option value="Martes">Martes</option>
                                            <option value="Miércoles">Miércoles</option>
                                            <option value="Jueves">Jueves</option>
                                            <option value="Viernes">Viernes</option>
                                            <option value="Sábado">Sábado</option>
                                          </select>
                                        
                                    </div>
                                    <div class="modal-footer">
                                        <input type="reset" class="btn btn-warning" value="Limpiar campos">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="closeModal">Cancelar</button>
                                        <button type="submit" class="btn btn-primary" >Guardar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('layouts/scripts.ejs') %>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="assets/plugins/tables/js/jquery.dataTables.min.js"></script>
        <script src="assets/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
        <script src="assets/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>
        <script src="js/asignar.js"></script>
</body>

</html>